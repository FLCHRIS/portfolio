---
import Timeline from "@/components/Timeline.astro";
import TimelineItem from "@/components/TimelineItem.astro";

const TIMELINE_ITEMS = [
  {
    date: "2025 - actualidad",
    title: "Desarrollador de Software",
    company: "HighTek",
    description: "Desarrollo y maquetación de interfaces responsivas en HTML, CSS y JavaScript. Integración de funcionalidades con backend en Java, incluyendo la creación de servicios REST y el uso de procedimientos almacenados en SQL Server. Participación en tareas de frontend y backend como parte de un equipo ágil.",
  },
  {
    date: "2024 - 2024",
    title: "Desarrollo Fullstack",
    company: "Lexar",
    description: "Diseñé y desarrollé una plataforma de gestión inmobiliaria con un panel de administración para la venta y administración de propiedades. Además de  autenticación segura con JWT y un sistema de roles para gestionar permisos de administradores, vendedores y clientes.",
  },
];
---

<section class="px-6 py-5 w-full max-w-2xl mx-auto">
  <h2 class="text-xl font-semibold font-mono text-neutral-900 mb-3 dark:text-white">
    Experiencia laboral
  </h2>
  <Timeline>
    {
      TIMELINE_ITEMS.map((item) => (
        <TimelineItem
          date={item.date}
          company={item.company}
          title={item.title}
          description={item.description}
        />
      ))
    }
  </Timeline>
</section>
