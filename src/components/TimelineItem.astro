---
export interface Props {
  date: string;
  company: string;
  title: string;
  description?: string;
}

const { date, title, company, description } = Astro.props;
---

<li class="ms-4">
  <div
    class="absolute w-3 h-3 z-10 bg-neutral-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-none dark:bg-gradient-to-r dark:from-cyan-500 dark:to-purple-500"
  >
  </div>
  <time class="mb-1 text-xs font-mono leading-none text-neutral-400">
    {date}
  </time>
  <h3 class="font-mono text-sm font-medium text-neutral-900 dark:text-white">
    {company}
  </h3>
  <h4 class="font-mono text-neutral-900 mb-1 dark:text-neutral-200">
    {title}
  </h4>
  {
    description && (
      <p class="mb-4 text-sm font-mono text-neutral-500 dark:text-neutral-400">{description}</p>
    )
  }
</li>
