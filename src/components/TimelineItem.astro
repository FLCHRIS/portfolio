---
export interface Props {
  date: string;
  company: string;
  title: string;
  description?: string;
}

const { date, title, company, description } = Astro.props;
---

<li class="ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
  >
  </div>
  <time class="mb-1 text-xs font-mono leading-none text-gray-500">
    {date}
  </time>
  <h3 class="font-mono text-sm font-medium text-gray-900">
    {company}
  </h3>
  <h4 class="font-mono text-gray-900 mb-1">
    {title}
  </h4>
  {
    description && (
      <p class="mb-4 text-sm font-mono text-gray-500">{description}</p>
    )
  }
</li>
